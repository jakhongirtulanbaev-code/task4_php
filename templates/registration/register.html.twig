{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3 text-center">Sign up</h5>

                {% if success %}
                    <div class="alert alert-success">
                        Registration successful. Email confirmation sent.
                        {% if confirmation_link %}
                            <div class="mt-2">
                                <small>Confirmation link (dev only): <a href="{{ confirmation_link }}">{{ confirmation_link }}</a></small>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {% if errors %}
                    <div class="alert alert-danger">
                        {% for error in errors %}
                            <div>{{ error }}</div>
                        {% endfor %}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" id="name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                        <small class="text-muted">Any non-empty password is accepted.</small>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Create account</button>
                </form>

                <div class="mt-3 text-center">
                    <a href="{{ path('app_login') }}">Already have an account? Sign in</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

